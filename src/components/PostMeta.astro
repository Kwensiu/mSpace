---
import { Icon } from "astro-icon/components";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import { formatDateToYYYYMMDD } from "../utils/date-utils";
import { getCategoryUrl, getTagUrl } from "../utils/url-utils";

interface Props {
	class: string;
	published: Date;
	updated?: Date;
	tags: string[];
	category: string | null;
	hideTagsForMobile?: boolean;
	hideUpdateDate?: boolean;
	alignRight?: boolean; // 新增右对齐属性
	en?: string; // 英文版本文章slug
	cn?: string; // 中文版本文章slug
}
const {
	published,
	updated,
	tags,
	category,
	hideTagsForMobile = false,
	hideUpdateDate = false,
	alignRight = false, // 默认为左对齐
	en,
	cn,
} = Astro.props;
const className = Astro.props.class;
---

<!-- Main metadata row -->
<div class:list={["flex flex-wrap text-neutral-500 dark:text-neutral-400 items-center gap-2 md:gap-3", className, {"justify-end": alignRight}]}>
    <!-- publish date -->
    <div class="flex items-center">
        <div class="meta-icon"
        >
            <Icon name="material-symbols:calendar-today-outline-rounded" class="text-base"></Icon>
        </div>
        <span class="text-50 text-xs md:text-sm font-medium">{formatDateToYYYYMMDD(published)}</span>
    </div>

    <!-- categories -->
    <div class="flex items-center">
        <div class="meta-icon"
        >
            <Icon name="material-symbols:book-2-outline-rounded" class="text-base"></Icon>
        </div>
        <div class="flex flex-row flex-nowrap items-center">
            <a href={getCategoryUrl(category)} aria-label={`View all posts in the ${category} category`}
               class="link-lg transition text-50 text-xs md:text-sm font-medium
                            hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap">
                {category || i18n(I18nKey.uncategorized)}
            </a>
        </div>
    </div>

    <!-- tags -->
    <div class:list={["items-center", {"flex": !hideTagsForMobile, "hidden md:flex": hideTagsForMobile}]}>
        <div class="meta-icon"
        >
            <Icon name="material-symbols:tag-rounded" class="text-base"></Icon>
        </div>
        <div class="flex flex-row flex-nowrap items-center">
            {(tags && tags.length > 0) && tags.map((tag, i) => (
                <div class:list={[{"hidden": i == 0}, "mx-1 text-[var(--meta-divider)] text-xs md:text-sm"]}>/</div>
                <a href={getTagUrl(tag)} aria-label={`View all posts with the ${tag.trim()} tag`}
                   class="link-lg transition text-50 text-xs md:text-sm font-medium
                                hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap">
                    {tag.trim()}
                </a>
            ))}
            {!(tags && tags.length > 0) && <div class="transition text-50 text-xs md:text-sm font-medium">{i18n(I18nKey.noTags)}</div>}
        </div>
    </div>
    
    <!-- update date -->
    {!hideUpdateDate && updated && updated.getTime() !== published.getTime() && (
        <div class="flex items-center ml-auto">
            <div class="updated-icon w-6 h-6"
            >
                <Icon name="material-symbols:update" class="text-base"></Icon>
            </div>
            <span class="text-50 text-sm font-medium pt-[3px]">{formatDateToYYYYMMDD(updated)}</span>
        </div>
    )}
</div>

<!-- Language switch buttons on separate line -->
{(en || cn) && (
    <div class="flex flex-wrap gap-2 mt-2">
        <div class="flex flex-row flex-wrap items-center gap-2 mb-2">
            {en && (
                <a href={`/blog/posts/${en}`} 
                   class="link-lg transition text-50 text-lg font-medium
                          hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap
                          px-2 py-1 rounded-md bg-black/5 dark:bg-white/10">
                    English Version
                </a>
            )}
            {cn && (
                <a href={`/blog/posts/${cn}`}
                   class="link-lg transition text-50 text-lg font-medium
                          hover:text-[var(--primary)] dark:hover:text-[var(--primary)] whitespace-nowrap
                          px-2 py-1 rounded-md bg-black/5 dark:bg-white/10">
                    中文版本
                </a>
            )}
        </div>
    </div>
)}