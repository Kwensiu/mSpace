---
import { Icon } from "astro-icon/components";
import { siteConfig } from "../config";
import { url } from "../utils/url-utils";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";

interface Props {
  customTitle?: string;
  customSubtitle?: string;
}

const {
  customTitle,
  customSubtitle,
} = Astro.props;
---

<div class="banner-content absolute w-full flex flex-col items-center justify-center pointer-events-none" style="z-index: 50;">
  <div class="text-center px-4 max-w-5xl w-full pointer-events-auto">
    <!-- 大标题 -->
    <h1 class="banner-title text-white/95 drop-shadow-lg mb-8">

    </h1>

    <!-- 副标题 -->
    <p class="banner-subtitle text-white/80 drop-shadow-md mb-10">

    </p>
  </div>
</div>

<style>
  .banner-content {
    position: absolute;
    top: calc(35vh - 18.5rem);
  }

  /* 在大屏幕(1024px以上)上调整位置,适应sidebar出现和布局变化 */
  @media (min-width: 1024px) {
    .banner-content {
      top: calc(35vh - 7rem);
    }
  }

  .banner-title {
    font-size: 4.5rem;
    font-weight: 400;
    letter-spacing: 0.01em;
    line-height: 1.2;
    font-family: "Dancing Script", cursive;
    text-shadow: 0 4px 30px rgba(0, 0, 0, 0);
    animation: fadeInUp 0.8s ease-out;
  }

  .banner-subtitle {
    font-size: 1.75rem;
    font-weight: 400;
    font-family: "Pacifico", cursive;
    letter-spacing: 0.05em;
    text-shadow: 0 2px 15px rgba(0, 0, 0, 0.3);
    animation: fadeInUp 0.8s ease-out 0.2s backwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 1024px) {
    .banner-content {
      top: calc(35vh - 14rem);
    }

    .banner-title {
      font-size: 3.5rem;
    }

    .banner-subtitle {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 768px) {
    .banner-content {
      top: calc(35vh - 12rem);
    }

    .banner-title {
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }

    .banner-subtitle {
      font-size: 1.2rem;
      margin-bottom: 1.5rem;
    }
  }



</style>

<script>
import("@utils/global-i18n");
</script>

