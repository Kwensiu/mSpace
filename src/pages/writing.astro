---
import WritingEditor from "@components/WritingEditor.svelte";
import MainGridLayout from "@layouts/MainGridLayout.astro";
---

<MainGridLayout title="写作" description="创建和编辑博客文章">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative">
        <div class="writing-card z-10 px-6 md:px-9 pt-8 pb-4 relative w-full ml-2 mr-2 md:ml-0 md:mr-0">
            <div class="mb-6">
                <h1 class="text-2xl font-bold mb-2 text-black/90 dark:text-white/90">写作(Beta)</h1>
                <p class="text-black/60 dark:text-white/60">创建和编辑博客文章，支持实时预览</p>
            </div>

            <WritingEditor client:only="svelte" />
        </div>
    </div>
</MainGridLayout>